<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox prefHeight="400.0" prefWidth="700.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="manager.controllers.SheetController">
   <children>
      <HBox prefHeight="100.0" prefWidth="200.0" spacing="5.0">
         <children>
            <VBox prefHeight="200.0" prefWidth="100.0">
               <children>
                  <Label text="%sheet.length" />
                  <TextField fx:id="lengthTextField" />
               </children>
               <HBox.margin>
                  <Insets left="5.0" />
               </HBox.margin>
            </VBox>
            <VBox prefHeight="200.0" prefWidth="100.0">
               <children>
                  <Label text="%sheet.width" />
                  <TextField fx:id="widthTextField" />
               </children>
            </VBox>
            <VBox prefHeight="200.0" prefWidth="100.0">
               <children>
                  <Label text="%sheet.thickness" />
                  <TextField fx:id="thicknessTextField" />
               </children>
            </VBox>
            <VBox prefHeight="200.0" prefWidth="100.0">
               <children>
                  <Label text="%sheet.type" />
                  <ComboBox fx:id="typeComboBox" onAction="#onActionTypeComboBox" prefWidth="150.0" />
               </children>
            </VBox>
            <VBox prefHeight="50.0" prefWidth="175.0">
               <children>
                  <Label text="%sheet.location" />
                  <ComboBox fx:id="locationComboBox" onAction="#onActionLocationComboBox" prefHeight="25.0" prefWidth="175.0" />
               </children>
            </VBox>
            <Button fx:id="addButton" mnemonicParsing="false" onAction="#onActionAddButton" prefHeight="42.0" prefWidth="94.0" text="%add" />
         </children>
         <opaqueInsets>
            <Insets />
         </opaqueInsets></HBox>
      <HBox prefHeight="400.0" prefWidth="200.0">
         <children>
            <TableView fx:id="sheetTable" prefHeight="159.0" prefWidth="750.0">
               <columns>
                  <TableColumn fx:id="idSheetColumn" prefWidth="35.0" text="%id" />
                  <TableColumn fx:id="timeColumn" prefWidth="130.0" text="%sheet.time" />
                  <TableColumn fx:id="lengthColumn" prefWidth="75.0" text="%sheet.length" />
                  <TableColumn fx:id="widthColumn" prefWidth="75.0" text="%sheet.width" />
                  <TableColumn fx:id="thicknessColumn" prefWidth="125.0" text="%sheet.thickness">
                     <graphic>
                        <ComboBox fx:id="thicknessSheetComboBox" onAction="#onActionThicknessSheetComboBox" prefHeight="25.0" prefWidth="60.0" />
                     </graphic>
                  </TableColumn>
                  <TableColumn fx:id="typeSheetColumn" prefWidth="100.0" text="%sheet.type" />
                  <TableColumn fx:id="locationSheetColumn" prefWidth="160.0" text="%sheet.location" />
               </columns>
            </TableView>
         </children>
      </HBox>
   </children>
</VBox>
