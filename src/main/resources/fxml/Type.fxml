<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<HBox fx:id="typeHBox" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="manager.controllers.TypeController">
    <children>
        <TableView fx:id="typeTable" prefHeight="400.0" prefWidth="410.0">
            <columns>
                <TableColumn fx:id="idTypeColumn" prefWidth="50.0" text="%id" />
                <TableColumn fx:id="typeColumn" prefWidth="160.0" text="%sheet.type" />
                <TableColumn fx:id="infoColumn" prefWidth="200.0" text="%info" />
            </columns>
        </TableView>
      <VBox prefHeight="400.0" prefWidth="150.0" spacing="5.0">
         <children>
            <Label text="%sheet.type" />
            <TextField fx:id="typeTextField" />
            <Label text="%info">
               <VBox.margin>
                  <Insets top="10.0" />
               </VBox.margin>
            </Label>
            <TextArea fx:id="infoTextArea" prefHeight="150.0" prefWidth="130.0" />
            <Button fx:id="addTypeButton" mnemonicParsing="false" onAction="#addButtonOnAction" prefHeight="50.0" prefWidth="130.0" text="%add">
               <VBox.margin>
                  <Insets top="10.0" />
               </VBox.margin>
            </Button>
         </children>
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
      </VBox>
    </children>
</HBox>
